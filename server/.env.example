# ============================================================
# FinanceCmd Server â€” Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.
# ============================================================

# --- Database ---
DATABASE_URL="file:./prisma/dev.db"

# --- Server ports ---
PORT=3001
HTTPS_PORT=3443

# --- Environment ---
NODE_ENV=development

# --- HTTPS ---
# Set to true to enable HTTPS (requires certs in server/certs/)
# Run: bun run scripts/generate-certs.ts
ENABLE_HTTPS=true

# --- Session ---
# REQUIRED. Generate with: openssl rand -hex 64
# The server will refuse to start if this is not set.
SESSION_SECRET=

# --- Encryption ---
# REQUIRED for encrypting PII fields at rest.
# Generate with: openssl rand -hex 32
# WARNING: Changing this key after data is stored makes all encrypted data unreadable.
ENCRYPTION_KEY=

# --- CORS ---
# The origin allowed to make cross-origin requests to the API.
# In development this is the Vite dev server.
CORS_ORIGIN=http://localhost:5173

# --- Reverse proxy ---
# Set to 1 if running behind a single reverse proxy (nginx, Caddy).
# This allows req.ip to correctly reflect the real client IP.
# Leave empty in development to prevent X-Forwarded-For spoofing.
TRUST_PROXY=

# --- Plaid (optional) ---
# Required only if you want to use the Plaid bank-sync integration.
# Get keys from https://dashboard.plaid.com
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox
